{% set bem_block = bem_block ?: 'social-links' %}
{% set social_items = {
  'facebook' : 'https://www.facebook.com/',
  'instagram' : 'https://www.instagram.com/',
  'twitter' : 'https://twitter.com/',
  'youtube' : 'https://www.youtube.com/'
}
%}

<div class="{{ bem_block }}">
  <ul class="{{ bem_block }}__items">
    {% for name, url in social_items %}
      <li class="{{ bem_block }}__item">
        <a href="{{ url }}" class="{{ bem_block }}__link {{ bem_block }}__link--{{ name }}">
          <img src="/themes/custom/blogger/assets/icons/social_items_icons/{{ name }}_black.png" alt="{{ name }}">
        </a>
      </li>
    {% endfor %}
  </ul>
</div>
